<Prefab>
  <Constants>
    <Constant Name="Icon.Width" Value="30" />
    <Constant Name="Icon.Height" Value="34" />
	<Constant Name="EditIcon.Width" Value="20" />
    <Constant Name="EditIcon.Height" Value="22" />
    <Constant Name="Text.Width" Value="45" />
    <Constant Name="Text.Height" Value="34" />
    <Constant Name="Text.Brush" Value="PartyAI.Menu.PartyRowText" />
    <Constant Name="Text.FontSize" Value="24" />
    <Constant Name="Element.Spacing" Value="0" />
  </Constants>
  <Parameters>
    <Parameter Name="DataSource" DefaultValue="" />
  </Parameters>
  <Window>
	<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="!Icon.Height" HorizontalAlignment="Left">
		<Children>
			<ListPanel DataSource="*DataSource" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight" HorizontalAlignment="Left">
			  <Children>
				<!--Infantry-->
				<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" MarginRight="@Spacing">
					<Children>
						<ListPanel DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" StackLayout.LayoutMethod="HorizontalLeftToRight">
						  <Children>
							<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Icon.Width" SuggestedHeight="!Icon.Height" Sprite="General\TroopTypeIcons\icon_troop_type_infantry" Color="#BE945BFF" />
							<TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedWidth="!Text.Width" SuggestedHeight="!Text.Height" VerticalAlignment="Bottom" Brush="!Text.Brush" Text="@InfantryCount" />
							<HintWidget DataSource="{InfantryHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
						  </Children>
						</ListPanel>
					</Children>
				</Widget>

				<!--Ranged-->
				<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" MarginRight="@Spacing">
					<Children>
						<ListPanel DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" StackLayout.LayoutMethod="HorizontalLeftToRight">
						  <Children>
							<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Icon.Width" SuggestedHeight="!Icon.Height" Sprite="General\TroopTypeIcons\icon_troop_type_bow" Color="#BE945BFF" />
							<TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedWidth="!Text.Width" SuggestedHeight="!Text.Height" Brush="!Text.Brush" Text="@RangedCount" />
							<HintWidget DataSource="{RangedHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
						  </Children>
						</ListPanel>
					</Children>
				</Widget>

				<!--Cavalry-->
				<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" MarginRight="@Spacing">
					<Children>
						<ListPanel DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" StackLayout.LayoutMethod="HorizontalLeftToRight">
						  <Children>
							<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Icon.Width" SuggestedHeight="!Icon.Height" Sprite="General\TroopTypeIcons\icon_troop_type_cavalry" Color="#BE945BFF" />
							<TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedWidth="!Text.Width" SuggestedHeight="!Text.Height" Brush="!Text.Brush" Text="@CavalryCount" />
							<HintWidget DataSource="{CavalryHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
						  </Children>
						</ListPanel>
					</Children>
				</Widget>
				
				<!--Horse Archer-->
				<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" MarginRight="@Spacing">
					<Children>
						<ListPanel DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" StackLayout.LayoutMethod="HorizontalLeftToRight">
						  <Children>
							<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Icon.Width" SuggestedHeight="!Icon.Height" Sprite="General\TroopTypeIcons\icon_troop_type_horse_archer" Color="#BE945BFF" />
							<TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedWidth="!Text.Width" SuggestedHeight="!Text.Height" Brush="!Text.Brush" Text="@HorseArcherCount" />
							<HintWidget DataSource="{HorseArcherHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
						  </Children>
						</ListPanel>
					</Children>
				</Widget>
			  </Children>
			</ListPanel>
		</Children>
	</Widget>
  </Window>
</Prefab>