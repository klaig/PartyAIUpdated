<Prefab>
  <Constants>
    <Constant Name="PartyRow.Height" Value="34" />
    <Constant Name="PartyRow.Spacing" Value="15" />
  </Constants>
  <Window>
	<Widget Id="PartyAIMainMenu" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
		<Children>
			<Widget Id="PartyAIMainMenu" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
				<Children>
					<Standard.Background />

					<!-- Copy Button -->
					<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" UpdateChildrenStates='true' MarginLeft="10" MarginTop="180" HorizontalAlignment="Left" VerticalAlignment="Top">
						<Children>
							<HintWidget DataSource="{CopyHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
							<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" UpdateChildrenStates="true" IsEnabled="@AllowCopy" Command.Click='Copy'>
							  <Children>
								<HintWidget DataSource="{CopyHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
								<BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="PartyAI.Menu.CopyButton" />
							  </Children>
							</ButtonWidget>
						</Children>
					</Widget>
					
					<!-- Paste Button -->
					<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" UpdateChildrenStates='true' MarginLeft="55" MarginTop="181" HorizontalAlignment="Left" VerticalAlignment="Top">
						<Children>
							<HintWidget DataSource="{PasteHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
							<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" UpdateChildrenStates="true" IsEnabled="@AllowPaste" Command.Click='Paste'>
							  <Children>
								<HintWidget DataSource="{PasteHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
								<BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="PartyAI.Menu.PasteButton" />
							  </Children>
							</ButtonWidget>
						</Children>
					</Widget>
					
					<!-- Cancel Button -->
					<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" UpdateChildrenStates='true' MarginLeft="100" MarginTop="181" HorizontalAlignment="Left" VerticalAlignment="Top">
						<Children>
							<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" UpdateChildrenStates="true" IsVisible="@CanCancelCopy" Command.Click='RefreshPartyList'>
							  <Children>
								<HintWidget DataSource="{CancelCopyHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
								<BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="SaveLoad.DeleteSave.Button" />
							  </Children>
							</ButtonWidget>
						</Children>
					</Widget>

					<!--List and Scrollbar horizontal list-->
					<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" MarginTop="165" SuggestedHeight="800" HorizontalAlignment="Center" IsVisible="@EnablePartyList">
					  <Children>
						<!--Clan List Scrollable Panel-->
						<ScrollablePanel WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" MarginLeft="3" MarginBottom="3" AutoHideScrollBars="true" ClipRect="PartyListClipRect" InnerPanel="PartyListClipRect\PartyList" VerticalScrollbar="..\PartyListScrollbar\Scrollbar">
						  <Children>
							<NavigationScopeTargeter ScopeID="PartyAIControlsPanelItemsContext" ScopeParent="..\PartyListClipRect" ScopeMovements="Vertical" />
							<Widget Id="PartyListClipRect" WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" ClipContents="true">
							  <Children>
								<NavigatableListPanel Id="PartyList" DataSource="{PartyList}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop">
								  <ItemTemplate>
									  <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="!PartyRow.Height" MarginTop="!PartyRow.Spacing" UpdateChildrenStates="true" StackLayout.LayoutMethod="HorizontalLeftToRight">
										<Children>
											<!-- Copy/Paste Button -->
											<ButtonWidget DataSource="{CopyPasteToggle}" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="SPOptions.Checkbox.Empty.Button" ButtonType="Toggle" IsDisabled="@IsDisabled" IsSelected="@IsSelected" ToggleIndicator="ToggleIndicator" UpdateChildrenStates="true" GamepadNavigationIndex="0">
												<Children>
													<ImageWidget Id="ToggleIndicator" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="SPOptions.Checkbox.Full.Button" />
												</Children>
											</ButtonWidget>
										
											<!-- Clan Banner -->
											<Widget DataSource="{ClanHint}" DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginRight="5" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint">
											  <Children>
												<MaskedTextureWidget DataSource="{..\ClanVisual}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="29" SuggestedHeight="37" HorizontalAlignment="Right" VerticalAlignment="Top" Brush="Kingdom.OtherWars.Faction.Small.Banner" AdditionalArgs="@AdditionalArgs" ImageId="@Id" ImageTypeCode="@ImageTypeCode" IsDisabled="true"  />
											  </Children>
											</Widget>
										
											<!-- Portrait -->
											<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" Command.Click="OpenEncyclopediaLink" Command.AlternateClick="OpenEncyclopediaLink" IsVisible="@ShowPortrait">
												<Children>
													<ImageIdentifierWidget DataSource="{Visual}" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="46" AdditionalArgs="@AdditionalArgs" ImageId="@Id" ImageTypeCode="@ImageTypeCode" TextureProviderName="@TextureProviderName"/>
													<Widget Sprite="General\Icons\Coin@2x" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="25" SuggestedHeight="25" HorizontalAlignment="Right" VerticalAlignment="Top" PositionYOffset="-8" PositionXOffset="10" IsVisible="@IsCaravan" />
												</Children>
											</ButtonWidget>
											
											<!--Walls Label-->
											<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="!PartyRow.Height" MarginLeft="6" MarginRight="6" Command.Click="OpenEncyclopediaLink" Command.AlternateClick="OpenEncyclopediaLink" IsVisible="@IsSettlement">
												<Children>
													<HintWidget DataSource="{WallsHint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
													<SettlementOverlayWallIconBrushWidget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"  VerticalAlignment="Bottom" Brush="SettlementWallsIconBrush" WallsLevel="@WallsLevel" GamepadNavigationIndex="0" />
												</Children>
											</ButtonWidget>
											
											<!-- Hero Name -->
											<TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="300" HorizontalAlignment="Left" VerticalAlignment="Bottom" Brush="PartyAI.Menu.PartyRowText" Text="@LeaderName"/>
											
											<!--In Army Icon-->
											<Widget HorizontalAlignment="Left" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="34" SuggestedHeight="!PartyRow.Height" VerticalAlignment="Center" MarginRight="10" >
											  <Children>
												<BrushWidget  WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" VerticalAlignment="Center" Brush="SPClan.Members.InArmyIcon" IsVisible="@IsInArmy" >
												  <Children>
													<HintWidget DataSource="{InArmyHint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" IsDisabled="true" />
												  </Children>
												</BrushWidget>
												<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="21" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="Clan\party_leader_crown" Color="#be945bff" IsVisible="@IsArmyLeader">
												  <Children>
												    <HintWidget DataSource="{ArmyLeaderHint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" IsDisabled="true" />
												  </Children>
												</Widget>
											  </Children>
											</Widget>
											
											<!-- Party Size -->
											<TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="110" HorizontalAlignment="Left" VerticalAlignment="Bottom" MarginRight="10" Brush="PartyAI.Menu.PartyRowText" Text="@PartySize" Command.HoverBegin="PartySizeBeginHint" Command.HoverEnd="PartySizeEndHint" />
											
											<!-- Party Composition Targets -->
											<PartyAICompositionDisplay Parameter.DataSource="{PartyComposition}" HorizontalAlignment="Left" HeightSizePolicy="Fixed" SuggestedHeight="!PartyRow.Height" WidthSizePolicy="Fixed" SuggestedWidth="375" />
											
											<!-- Edit Party Composition -->
											<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" UpdateChildrenStates='true' MarginLeft="-55">
												<Children>
													<HintWidget DataSource="{EditCompositionHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
													<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" UpdateChildrenStates="true" IsEnabled="@AllowEditComposition" Command.Click='EditPartyComposition'>
													  <Children>
														<HintWidget DataSource="{EditCompositionHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
														<BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="PartyAI.Menu.EditButton" />
													  </Children>
													</ButtonWidget>
												</Children>
											</Widget>
											
											<!-- Template Name -->
											<TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" MarginLeft="20" MarginRight="20" SuggestedWidth="150" HorizontalAlignment="Left" VerticalAlignment="Bottom" Brush="PartyAI.Menu.PartyRowText" Brush.TextHorizontalAlignment="Right" Text="@TemplateName"/>
											
											<!-- Edit Party Template -->
											<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" UpdateChildrenStates='true' MarginLeft="-10">
												<Children>
													<HintWidget DataSource="{ChangeTemplateHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
													<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" UpdateChildrenStates="true" IsEnabled="@AllowEditTemplate" Command.Click='EditPartyTemplate'>
													  <Children>
														<HintWidget DataSource="{ChangeTemplateHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
														<BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="PartyAI.Menu.EditButton" />
													  </Children>
													</ButtonWidget>
												</Children>
											</Widget>
											
											<!-- Active Order -->
											<TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" MarginLeft="0" MarginRight="20" SuggestedWidth="200" HorizontalAlignment="Left" VerticalAlignment="Bottom" Brush="PartyAI.Menu.PartyRowText" Brush.TextHorizontalAlignment="Right" Text="@ActiveOrder">
												<Children>
													<HintWidget DataSource="{CaravanTradeLog}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
												</Children>
											</TextWidget>
											
											<!-- Gold Icon-->
											<Widget Sprite="General\Icons\Coin@2x" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" VerticalAlignment="Center" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" MarginLeft="-10" IsVisible="@IsCaravan" />
											<Widget Sprite="" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" VerticalAlignment="Center" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" MarginLeft="-10" IsVisible="@IsSettlement" />
											
											<!-- Edit Active Order -->
											<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" MarginLeft="-10" IsVisible="@IsLordParty">
												<Children>
													<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" UpdateChildrenStates="true" Command.Click='OpenOrderQueue'>
													  <Children>
														<HintWidget DataSource="{ChangeHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
														<BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="PartyAI.Menu.EditButton" />
													  </Children>
													</ButtonWidget>
												</Children>
											</Widget>
												
											<!-- Edit Party Options -->
											<ButtonWidget DoNotPassEventsToChildren='true' WidthSizePolicy='CoverChildren' HeightSizePolicy='Fixed' SuggestedHeight='!PartyRow.Height' Brush='ButtonBrush2' VerticalAlignment="Bottom" HorizontalAlignment='Left' UpdateChildrenStates='true' MarginLeft="40" MarginRight="25" Command.Click='EditPartyOptions'>
												<Children>
													<TextWidget WidthSizePolicy='CoverChildren' HeightSizePolicy='StretchToParent' Brush='Kingdom.GeneralButtons.Text' Text='@OptionsText' />
												</Children>
											</ButtonWidget>
											
											<!--Show On Map Button-->
											<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="33" SuggestedHeight="19" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="ShowOnMap.Button" Command.Click="ShowHeroOnMap" IsVisible="@CanShowLocationOfHero" DoNotPassEventsToChildren="true" UpdateChildrenStates="true" GamepadNavigationIndex="0">
											  <Children>
												<HintWidget DataSource="{ShowOnMapHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
											  </Children>
											</ButtonWidget>
										</Children>
									  </ListPanel>
								  </ItemTemplate>
								</NavigatableListPanel>
							  </Children>
							</Widget>

						  </Children>
						</ScrollablePanel>

						<Standard.VerticalScrollbar Id="PartyListScrollbar" HeightSizePolicy="StretchToParent" HorizontalAlignment="Right" MarginRight="2" MarginLeft="2" MarginBottom="3" />
					  </Children>
					</ListPanel>
					
					<!-- Header -->
					<Standard.TopPanel Parameter.Title="@MainHeadingText">
					 <Children>
						<ListPanel DoNotAcceptEvents="false" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="60" LayoutImp.LayoutMethod="HorizontalLeftToRight" MarginLeft="-100">
						  <Children>
							<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="CreatePartyTemplate" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="225" SuggestedHeight="60" MarginBottom="3" HorizontalAlignment="Center" VerticalAlignment="Top" Brush="Header.Tab.Left">
							  <Children>
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" PositionYOffset="1" Brush="Clan.TabControl.Text" Text="@CreateTemplateText"/>
							  </Children>
							</ButtonWidget>
							<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="FineTunePartyTemplate" MarginRight="10" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="250" SuggestedHeight="51" MarginTop="6" HorizontalAlignment="Center" VerticalAlignment="Top" Brush="Header.Tab.Center">
							  <Children>
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" PositionYOffset="1" Brush="Clan.TabControl.Text" Text="@FineTunePartyTemplateText"/>
								<HintWidget DataSource="{FineTunePartyTemplateHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
							  </Children>
							</ButtonWidget>
							<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="DeletePartyTemplate" MarginRight="10" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="225" SuggestedHeight="51" MarginTop="6" HorizontalAlignment="Center" VerticalAlignment="Top" Brush="Header.Tab.Center">
							  <Children>
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" PositionYOffset="1" Brush="Clan.TabControl.Text" Text="@DeletePartyTemplateText"/>
							  </Children>
							</ButtonWidget>
							<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="CopyPasteSettings" MarginLeft="10" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="200" SuggestedHeight="51" MarginTop="6" HorizontalAlignment="Center" VerticalAlignment="Top" Brush="Header.Tab.Center">
							  <Children>
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" PositionYOffset="1" Brush="Clan.TabControl.Text" Text="@CopyPasteText"/>
							  </Children>
							</ButtonWidget>
							<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="OpenModOptions" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="200" SuggestedHeight="60" MarginBottom="3"  HorizontalAlignment="Center" VerticalAlignment="Top" Brush="Header.Tab.Right">
							  <Children>
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" PositionYOffset="1" Brush="Clan.TabControl.Text" Text="@ModOptionsText"/>
							  </Children>
							</ButtonWidget>
						  </Children>
						</ListPanel>
						
						<!-- Edit Defaults -->
						<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment='Left' UpdateChildrenStates='true' MarginTop="20" MarginLeft="10">
							<Children>
								<ButtonWidget DoNotPassEventsToChildren='true' WidthSizePolicy='Fixed' HeightSizePolicy='Fixed' SuggestedWidth="225" SuggestedHeight='40' Brush='ButtonBrush2' UpdateChildrenStates='true' Command.Click='EditDefaultSettings'>
									<Children>
										<TextWidget WidthSizePolicy='CoverChildren' HeightSizePolicy='StretchToParent' HorizontalAlignment="Center" Brush='Kingdom.GeneralButtons.Text' Text='@EditDefaultSettingsText' />
									</Children>
								</ButtonWidget>
							</Children>
						</Widget>
						
						<!-- Create Clan Party -->
						<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment='Right' UpdateChildrenStates='true' MarginTop="40" MarginRight="40">
							<Children>
								<HintWidget DataSource="{CreateClanPartyHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
								<ButtonWidget DoNotPassEventsToChildren='true' WidthSizePolicy='Fixed' HeightSizePolicy='Fixed' SuggestedWidth="225" SuggestedHeight='60' Brush='ButtonBrush2' IsEnabled="@CanCreateNewParty" UpdateChildrenStates='true' Command.Click='CreateClanParty'>
									<Children>
										<TextWidget WidthSizePolicy='CoverChildren' HeightSizePolicy='StretchToParent' HorizontalAlignment="Center" Brush='Kingdom.GeneralButtons.Text' Text='@CreateClanPartyText' />
									</Children>
								</ButtonWidget>
							</Children>
						</Widget>
						
						<!-- Show All Heroes -->
						<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment='Right' UpdateChildrenStates='true' MarginTop="50" MarginRight="300" StackLayout.LayoutMethod="HorizontalLeftToRight">
							<Children>
								<HintWidget DataSource="{ShowAllHeroesHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" IsDisabled="false" />
								<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="40" SuggestedHeight="40" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="SPOptions.Checkbox.Empty.Button" ButtonType="Toggle" IsSelected="@ShowAllHeroes" ToggleIndicator="ToggleIndicator" UpdateChildrenStates="true" GamepadNavigationIndex="0">
									<Children>
										<ImageWidget Id="ToggleIndicator" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="SPOptions.Checkbox.Full.Button" />
									</Children>
								</ButtonWidget>
								<TextWidget DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Left" MarginLeft="5" VerticalAlignment="Center" Brush="Clan.Stat.Name.Text" Text="@ShowAllHeroesText"/>
							</Children>
						</ListPanel>
						
						<!-- Sort Dropdown Menu -->
						<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment='Right' UpdateChildrenStates='true' MarginTop="110" MarginRight="194" StackLayout.LayoutMethod="HorizontalLeftToRight">
							<Children>
								<TextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" SuggestedWidth="60" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="Clan.Stat.Name.Text" Text="@SortText"/>
								<PartyAIDropdown Parameter.DataSource="{SortController}" WidthSizePolicy="Fixed" SuggestedWidth="140" VerticalAlignment="Top" HorizontalAlignment='Left' UpdateChildrenStates='true' />
							</Children>
						</ListPanel>
						<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment='Right' UpdateChildrenStates='true' MarginTop="110" MarginRight="120" StackLayout.LayoutMethod="HorizontalLeftToRight">
							<Children>
								<PartyAIDropdown Parameter.DataSource="{SortDirectionController}" WidthSizePolicy="Fixed" SuggestedWidth="50" VerticalAlignment="Top" HorizontalAlignment='Left' UpdateChildrenStates='true' />
							</Children>
						</ListPanel>
					  </Children>
					</Standard.TopPanel>
					
					<!-- Select All Button -->
					<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" UpdateChildrenStates='true' MarginLeft="166" MarginTop="131" HorizontalAlignment="Left" VerticalAlignment="Top">
						<Children>
							<HintWidget DataSource="{SelectAllHint}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint"  />
							<ButtonWidget DataSource="{SelectAllToggle}" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!PartyRow.Height" SuggestedHeight="!PartyRow.Height" Brush="SPOptions.Checkbox.Empty.Button" ButtonType="Toggle" IsDisabled="@IsDisabled" IsSelected="@IsSelected" ToggleIndicator="ToggleIndicator" UpdateChildrenStates="true" GamepadNavigationIndex="0">
								<Children>
									<ImageWidget Id="ToggleIndicator" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="SPOptions.Checkbox.Full.Button" />
								</Children>
							</ButtonWidget>
						</Children>
					</Widget>
					
					<Standard.DialogCloseButtons Parameter.ShowCancel = "false" Parameter.DoneButtonAction="ExecuteDone" Parameter.DoneButtonText="@DoneText" />
				</Children>
			</Widget>
		</Children>
	</Widget>
</Window>
</Prefab>
